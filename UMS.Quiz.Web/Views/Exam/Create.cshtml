    <div class="box-body">
        @* <h1 class="m-0 pt-3 fs-4 fw-normal border-bottom"> Sửa Đề thi</h1> *@
        <form>
            <div class="pt-3">
                <label for="recipient-name" class="col-form-label fs-5">Nhập tên đề thi:</label>
                <input type="text" class="form-control" id="recipient-name">
            </div>
            <div class="form-group py-2">
                <label for="recipient-name" class="col-form-label fs-5">Cấu trúc đề:</label>
                <!-- UX "tồi" => Nên thay bằng radio hoặc checkbox -->
                <select class="form-control" name="category" id="categorySelect">
