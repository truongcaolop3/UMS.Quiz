                    <option>-- Chọn thời gian thi --</option>
                    <option>15</option>
                    <option>45</option>
                    <option>60</option>
                    <option>90</option>
                    <option>120</option>
                </select>
            </div>
            <div class="form-group py-2 d-flex justify-content-end">
                <a href="~/Exam/Create" class="btn btn-primary mx-2">
                    Tạo và ở lại
                </a>
                <a href="~/Exam" class="btn btn-primary mx-2">
                    Tạo và quay về trang quản lý bộ đề thi
                </a>
                
                <a href="~/Exam" class="btn btn-light ms-1">
                    Quay lại
