@model UMS.Quiz.Web.Models.KnowledgesSearchResult
@{
    Layout = null;
}
<div>
    <p style="margin:10px 0 10px 0">
        Có <strong>@Model.RowCount</strong> khối kiến thức trong tổng số <strong>@Model.PageCount</strong> trang
    </p>

    @if (Model.Data.Count == 0)
    {
        <p class="text-center text-danger">Không tìm thấy kết quả nào.</p>
    }
    else
    {

        <div class="table-responsive">
            <table class="table table-bordered table-hover ">

                <thead>
                    <tr class="bg-light ">
                        <th style="width:30px">STT</th>
                        <th>Tên khối kiến thức</th>
                        <th style="width:55px " class="text-center">

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (var index = 0; index < Model.Data.Count; index++)
                    {
                        var item = Model.Data[index];
                        <tr>
                            <td>@(index + 1)</td> <!-- Hiển thị số thứ tự -->
                            <td>@item.KnowledgeName</td>
                            <td class="text-center">
                                <a href="~/QuizDetail/Index?knowledgeId=@item.KnowledgeId" class="btn btn-xs btn-secondary">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>

        @*Phân trang*@
        <div class="box-footer text-center">
            <ul class="pagination d-flex justify-content-center">
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    if (i == Model.Page)
                    {
                        <li class="active page-item"><a class="page-link">@i</a></li>
                    }
                    else
                    {
                        <li class="page-item "><a class="page-link" href="javascript:;" onclick="doSearch('#formSearch', @i)">@i</a></li>
                    }
                }
            </ul>
        </div>

    }
</div>